<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="8" alignment="CENTER" style="-fx-background-color: #181a20; -fx-background-radius: 14;">
    <Label text="Log Output" style="-fx-font-size: 16px; -fx-font-family: 'Segoe UI Semibold'; -fx-text-fill: #3f8efc;"/>
    <TextArea fx:id="logArea" editable="false" wrapText="true" prefRowCount="12" style="-fx-background-color: #222; -fx-text-fill: #fff; -fx-font-family: 'Consolas', 'monospace'; -fx-font-size: 13px;"/>
</VBox>
