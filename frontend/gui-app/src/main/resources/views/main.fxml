<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mpjmp.gui.FileUploadController">
    <VBox alignment="CENTER" spacing="10">
        <Label text="Upload a File"/>
        <Button text="Choose File" onAction="#chooseFile"/>
        <Button text="Upload" onAction="#uploadFile"/>
        <ProgressBar fx:id="progressBar" progress="0"/>
        <Label fx:id="statusLabel" text="Status: Waiting"/>
    </VBox>
</AnchorPane>
